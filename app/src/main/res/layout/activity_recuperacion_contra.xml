<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9B5DE5"
    tools:context=".RecuperacionContra">

    <TextView
        android:id="@+id/rectangulo_verde"
        android:layout_width="330dp"
        android:layout_height="503dp"
        android:background="@drawable/capa"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.296" />

    <TextView
        android:id="@+id/textView2"
        android:elevation="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/segoe_semibold"
        android:text="Recuperacion de"
        android:textColor="#FEE440"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/rectangulo_verde"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/rectangulo_verde"
        app:layout_constraintTop_toTopOf="@+id/rectangulo_verde" />

    <TextView
        android:id="@+id/textView3"
        android:elevation="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoe_semibold"
        android:text="Contraseña"
        android:textColor="#FEE440"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/rectangulo_verde"
        app:layout_constraintStart_toStartOf="@+id/rectangulo_verde"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView10"
        android:elevation="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/segoe"
        android:text="Ingresa tu correo electronico para buscar tu"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/rectangulo_verde"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/rectangulo_verde"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView"
        android:elevation="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/segoe"
        android:text="Se te enviara un correo con un link, en el cual"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/rectangulo_verde"
        app:layout_constraintStart_toStartOf="@+id/rectangulo_verde"
        app:layout_constraintTop_toBottomOf="@+id/bot_buscar" />

    <TextView
        android:id="@+id/textView7"
        android:elevation="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoe"
        android:text="podreas retaurar la contraseña"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/rectangulo_verde"
        app:layout_constraintStart_toStartOf="@+id/rectangulo_verde"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView11"
        android:elevation="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/segoe"
        android:text="cuenta "
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/editTextCorreo"
        android:elevation="3dp"
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_login"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/segoe"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#80000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/rectangulo_verde"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/rectangulo_verde"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />


    <Button
        android:id="@+id/bot_buscar"
        android:elevation="3dp"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bot_login"
        android:fontFamily="sans-serif-black"
        android:text="Buscar"
        android:textColor="#BF000000"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/rectangulo_verde"
        app:layout_constraintStart_toStartOf="@+id/rectangulo_verde"
        app:layout_constraintTop_toBottomOf="@+id/editTextCorreo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="234dp"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>